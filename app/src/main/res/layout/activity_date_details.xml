<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00AF91">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles de pago"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/consultorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultorio:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/consultorioSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha y hora de la cita:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/dateSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/timeSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Motivo:"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/reasonSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="35dp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Monto de la consulta:             Comisión:"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/countSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$245.00                                    $5.00"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="35dp" />

        <TextView
            android:id="@+id/cedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="35dp" />

        <TextView
            android:id="@+id/turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de turno:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/turnNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textSize="65sp"
            android:textColor="#000000"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp" />

        <TextView
            android:id="@+id/payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto total"
            android:textSize="20sp"
            android:textStyle="bold"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/montoTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$250.00"
            android:textSize="40sp"
            android:textColor="#00AF91"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar cita"
            android:textSize="20sp"
            android:backgroundTint="#00AF91"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
